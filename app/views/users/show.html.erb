<div class="row">
  <div class="col-lg-12">
    <div class="quick-stats-header">
      <hr>
        <h3>Dashboard</h3>
        <p class="smaller-text">Quick Stats</p>
      <hr>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-3 col-xs-12 stat-column">
    <h4 class="dashboard-header">manual mileage</h4>
    <h2><%= current_user.total_specific_miles(1) %></h2>
  </div> <div class="col-md-3 col-xs-12 stat-column">
    <h4 class="dashboard-header">driven mileage</h4>
    <h2><%= current_user.total_specific_miles(0) %></h2>
  </div>
  <div class="col-md-3 col-xs-12 stat-column">
    <h4 class="dashboard-header">variance</h4>
    <h2><%= current_user.miles_variance %></h2>
  </div>
  <div class="col-md-3 col-xs-12 stat-column">
    <h4 class="dashboard-header">total miles</h4>
    <h2><%= link_to current_user.total_miles, logs_path %></h2>
  </div>
</div>

<hr>
