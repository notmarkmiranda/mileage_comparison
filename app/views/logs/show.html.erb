<div class="row">
  <div class="col-lg-4 col-lg-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Mileage Log #<%= @log.number_for_user %>
        <div class="action-buttons pull-right" role="group" aria-label="...">
            <%= link_to "Edit", edit_log_path(@log), class: "btn btn-xs btn-default" %>
            <%= button_to "Delete", @log, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure you want to delete this mileage log?' } %>
          </div>
        </h3>
      </div>
      <div class="panel-body">
        <ul class="custom-bullet">
          <li><span class="glyphicon glyphicon-star" aria-hidden="true"></span><%= @log.travel_type.humanize %></li>
          <li><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span><%= @log.formatted_long_date %></li>
          <li><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span><%= @log.distance %> miles</li>
          <% unless @log.blank_note_field? %>
            <li><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= @log.notes %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

