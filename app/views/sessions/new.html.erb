<div class="container">
  <div class="row">
    <div class="col-lg-offset-4 col-lg-4">

      <div class="panel panel-default">
        <div class="panel-heading">
          Log In
        </div>
        <div class="panel-body">
          <%= form_for :session, url: login_path do |f| %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.text_field :email, class: 'form-control', autofocus: true %>
            </div>
            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
            <%= f.submit "Sign In", class: 'btn btn-default' %>
          <% end %>
          <hr>
          <p class="smaller-text">
            <%= link_to "https://www.strava.com/oauth/authorize?client_id=#{ENV['strava_client_id']}&response_type=code&redirect_uri=#{token_exchange_url}" do %>
            <%= image_tag 'btn_strava_connectwith_orange.png' %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>

